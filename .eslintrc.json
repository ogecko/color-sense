{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "blockBindings": true,
            "arrowFunctions": true,
            "destructuring": true,
            "spread": true,
            "classes":true,
            "templateStrings":true,
            "jsx": true,
            "experimentalObjectRestSpread":true
        }
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/guide"
    ],
    "rules": {
        "no-console": 0,
        "indent": [ 2, "tab" ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "strict": [2, "function"],
        "semi": [ 2, "always" ]
    }
    // "env": {
    //     "node": true
    // }
}